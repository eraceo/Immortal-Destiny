# Auto detect text files and perform LF normalization
* text=auto

# JS and TS files must always use LF for tools to work
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# CSS files
*.css text eol=lf
*.scss text eol=lf

# HTML files
*.html text eol=lf

# Markdown files
*.md text eol=lf

# Images should be treated as binary
# (binary is a macro for -text -diff)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# RC files and YML files
*.rc text eol=lf
.* text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore 